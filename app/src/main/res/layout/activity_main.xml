<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="cn.yzapp.numchooseview.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.yzapp.numchooseviewlib.NumChooseView
            android:id="@+id/num_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/et_LeastBuyNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="最低购买数量"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_LimitNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="限购"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_ShowStorage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="库存"
            android:inputType="number" />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定" />

        <Button
            android:id="@+id/show_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示数量" />
    </LinearLayout>


</ScrollView>
